read -s -p "Enter Password: " mypassword
#--------------------------------
for f in *.rtf
do
 echo "Processing $f"
 #gpg -c $f
 gpg --batch --yes --passphrase "$mypassword" -c $f
done
#--------------------------------
read -p "Remove files?" -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]
then
    echo "------"
    read -p "Are you sure THE SOURCES (yes/anything else)? Remove?" 
    if [[ $REPLY =~ ^[Yy]$ ]]
    then
        rm *.rtf
    fi
fi
#--------------------------------
